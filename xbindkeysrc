# Increase volume
"pactl set-sink-volume @DEFAULT_SINK@ +2%"
  XF86AudioRaiseVolume

# Decrease volume
"pactl set-sink-volume @DEFAULT_SINK@ -2%"
  XF86AudioLowerVolume

# Mute
"pactl set-sink-mute 0 toggle"
  XF86AudioMute

# Calculator
"gnome-calculator"
  XF86Calculator

# Monitor Brightness Up
"lux -a 500"
  XF86MonBrightnessUp

# Monitor Brightness Up
"lux -s 500"
  XF86MonBrightnessDown
